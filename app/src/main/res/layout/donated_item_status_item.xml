<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="?android:selectableItemBackground">


            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/image_view_circular_number"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:textColor="@color/white"
                android:textSize="25sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_circular_heading"
                android:textSize="20sp"
                android:text="Books"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/image_view_circular_number"
                android:layout_toEndOf="@+id/image_view_circular_number"
                android:textColor="@color/black_color"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Submitted"
                android:id="@+id/txt_circular_status"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/txt_circular_heading"
                android:layout_alignStart="@+id/txt_circular_heading"
                android:layout_below="@+id/txt_circular_heading"
                android:layout_marginTop="5dp"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/status_image_view"
                android:src="@drawable/pending"
                android:layout_alignBottom="@+id/txt_circular_status"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>