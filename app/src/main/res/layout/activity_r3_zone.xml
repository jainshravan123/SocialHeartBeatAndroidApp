<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                android:theme="@style/ThemeOverlay.AppCompat.Dark" />


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/viewReuseTips"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/toolbar">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/cv3"
                        card_view:cardElevation="2dp"
                        card_view:cardUseCompatPadding="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_below="@+id/toolbar"
                            android:id="@+id/r3_image_view"
                            android:src="@drawable/re_use_icon"
                            android:background="@color/colorPrimaryDark"/>

                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:id="@+id/cvData1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardElevation="2dp"
                        card_view:cardUseCompatPadding="true"
                        android:layout_margin="5dp"
                        android:layout_below="@+id/cv3">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?android:selectableItemBackground">

                            <TextView
                                android:id="@+id/catTipsDataHeadingTxtView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:padding="10dp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-dark"
                                android:text="R3 Zone 1"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/colorPrimary" />

                            <include
                                android:id="@+id/include2"
                                layout="@layout/item_divider"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_below="@+id/catTipsDataHeadingTxtView1"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp" />

                            <TextView
                                android:id="@+id/catTipsDataTxtView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_below="@+id/catTipsDataHeadingTxtView1"
                                android:paddingBottom="5dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:paddingTop="10dp"
                                android:text="Reduce Reuse Recycle is an avenue for our associates to get reliable, interesting and useful suggestions/tips to reduce and reuse wastage whose disposal is challenging, either due to generation in huge quantity or nature. Proven recycle methods are also shared to enable better management of waste materials."
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/material_blue_grey_80" />

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:id="@+id/cvData2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardElevation="2dp"
                        card_view:cardUseCompatPadding="true"
                        android:layout_margin="5dp"
                        android:layout_below="@+id/cvData1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?android:selectableItemBackground">

                            <TextView
                                android:id="@+id/catTipsDataHeadingTxtView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:padding="10dp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-dark"
                                android:text="R3 Zone 2"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/colorPrimary" />

                            <include
                                android:id="@+id/include2"
                                layout="@layout/item_divider"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_below="@+id/catTipsDataHeadingTxtView2"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp" />

                            <TextView
                                android:id="@+id/catTipsDataTxtView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_below="@+id/catTipsDataHeadingTxtView2"
                                android:paddingBottom="5dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:paddingTop="10dp"
                                android:text="Users can like the suggestions or rate them as useful to them. Most popular and useful ideas would be promoted among associates and the least popular tips are removed periodically."
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/material_blue_grey_80" />

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:id="@+id/cvData3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardElevation="2dp"
                        card_view:cardUseCompatPadding="true"
                        android:layout_margin="5dp"
                        android:layout_below="@+id/cvData2">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?android:selectableItemBackground">

                            <TextView
                                android:id="@+id/catTipsDataHeadingTxtView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:padding="10dp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-dark"
                                android:text="R3 Zone 3"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/colorPrimary" />

                            <include
                                android:id="@+id/include2"
                                layout="@layout/item_divider"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_below="@+id/catTipsDataHeadingTxtView3"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp" />

                            <TextView
                                android:id="@+id/catTipsDataTxtView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_below="@+id/catTipsDataHeadingTxtView3"
                                android:paddingBottom="5dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:paddingTop="10dp"
                                android:text="Users can also suggest categories for inclusion as well as provide suggestions/tips to be included under existing or new categories. All the user inputs would be updated after a review process by Corporate Social Responsibility team. "
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/material_blue_grey_80" />

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>


                </RelativeLayout>

            </ScrollView>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/r3ZoneButton"
                android:text="Reduce Reuse Recycle"
                android:background="@drawable/rounded_button_corners_setting"
                android:textColor="@color/white"
                android:layout_alignParentBottom="true"
                android:layout_margin="5dp"/>

        </RelativeLayout>
    </android.support.design.widget.CoordinatorLayout>
</android.support.v4.widget.DrawerLayout>